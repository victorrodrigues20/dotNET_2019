@model IEnumerable<dotNET_2019.Models.Livro>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carrinho</h1>

@if (Model == null || Model.Count() == 0)
{
    <br />
    <h3>Carrinho est√° vazio</h3>

}


<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Produto</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>
                @if(item.Foto != null) {
                    <img class="card-img-top" src="~/@item.Foto" style="width:50px;height:50px" />
                } 
                else {
                    <img class="card-img-top" src="https://picsum.photos/50/50/?random" style="width:50px;height:50px" />
                }
            </td>
            <td>@item.Titulo</td>
            <td>@item.Quantidade</td>
        </tr>
}
    </tbody>
</table>
